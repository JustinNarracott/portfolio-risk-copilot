{
  "name": "Portfolio Risk Copilot",
  "slug": "portfolio-risk-copilot",
  "version": "1.0.0",
  "description": "Auto-generate exec briefings and portfolio risk analysis from Jira/DevOps exports. Decision-first PM intelligence powered by Claude Opus.",
  "author": "SignalBreak.io",
  "repository": "https://github.com/JustinNarracott/portfolio-risk-copilot",
  "license": "MIT",
  "tags": [
    "project-management",
    "pmo",
    "portfolio",
    "risk",
    "reporting",
    "enterprise",
    "executive-briefing",
    "jira",
    "devops"
  ],
  "commands": [
    {
      "name": "/pmo-ingest",
      "description": "Ingest project data from a folder containing CSV, JSON, or Excel exports.",
      "usage": "/pmo-ingest <folder-path>",
      "examples": [
        "/pmo-ingest ./project-data",
        "/pmo-ingest ~/Documents/jira-exports"
      ]
    },
    {
      "name": "/pmo-risks",
      "description": "Analyse ingested data and display top 5 risks per project with plain-English explanations.",
      "usage": "/pmo-risks [--top N] [--json]",
      "examples": [
        "/pmo-risks",
        "/pmo-risks --top 3",
        "/pmo-risks --json"
      ]
    },
    {
      "name": "/pmo-scenario",
      "description": "Run a what-if scenario simulation and display the impact summary.",
      "usage": "/pmo-scenario \"<scenario description>\"",
      "examples": [
        "/pmo-scenario \"cut Beta scope by 30%\"",
        "/pmo-scenario \"increase Gamma budget by 50%\"",
        "/pmo-scenario \"delay Alpha by 1 quarter\"",
        "/pmo-scenario \"remove Delta\""
      ]
    },
    {
      "name": "/pmo-brief",
      "description": "Generate stakeholder-specific briefing documents (DOCX/PPTX).",
      "usage": "/pmo-brief <board|steering|project|all> [--logo <path>] [--colour <hex>]",
      "examples": [
        "/pmo-brief board",
        "/pmo-brief steering",
        "/pmo-brief all --logo ./logo.png --colour 003366"
      ]
    }
  ],
  "permissions": {
    "filesystem": {
      "read": ["csv", "json", "xlsx", "xls", "txt", "md", "png", "jpg", "jpeg"],
      "write": ["docx", "pptx", "xlsx", "json"]
    }
  },
  "requirements": {
    "python": ">=3.11",
    "packages": [
      "pandas",
      "python-docx",
      "python-pptx",
      "openpyxl"
    ]
  },
  "entry_point": "src/cli.py"
}
